              <td onclick="get_cell_index(this)" id=pos6>  <%= board[1][2] %> <form method="post" action="/make-move"> <input type="text" name="mark"/> </form> </td>
        
              <td onclick="get_cell_index(this)" id=pos7>  <%= board[2][0] %> <form method="post" action="/make-move"> <input type="text" name="mark"/> </form> </td>
              <td onclick="get_cell_index(this)" id=pos8>  <%= board[2][1] %> <form method="post" action="/make-move"> <input type="text" name="mark"/> </form> </td>
              <td onclick="get_cell_index(this)" id=pos9>  <%= board[2][2] %> <form method="post" action="/make-move"> <input type="text" name="mark"/> </form> </td>
