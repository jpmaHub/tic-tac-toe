  <body>
  
    <div id='header'>
      <h1> TIC TAC TOE </h1>
    </div>

    <div id='main'>
      <%= board %>
    </div>

    <script>
      function get_cell_index(x) {
        alert(x.cellIndex + 1) ;
        }
    </script>

    <div class=board id=board>
      <table id=MyTable>
          <tr>
